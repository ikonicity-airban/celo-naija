{
    "elementStyling": {
      "DO_NOT": [
        "DO NOT apply card gradients to icons or buttons",
        "DO NOT use primary button colors on secondary buttons or text",
        "DO NOT apply shadows to inline text or small icons",
        "DO NOT use gradient fills on icon SVGs",
        "DO NOT apply border radius >24px to action cards",
        "DO NOT use text colors from gradients as background fills"
      ],
      "typography": {
        "fontFamily": "Lato",
        "weights": {
          "ExtraBold": 800,
          "Bold": 700,
          "SemiBold": 600,
          "Medium": 500,
          "Regular": 400
        },
        "hierarchy": {
          "greeting": {
            "size": "32px",
            "weight": "ExtraBold",
            "color": "#D975BB",
            "context": "Welcome header (user name)"
          },
          "pageTitle": {
            "size": "28px",
            "weight": "Bold",
            "color": "#171532",
            "context": "Main screen titles (e.g., 'Welcome Back!')"
          },
          "sectionHeader": {
            "size": "20px",
            "weight": "SemiBold",
            "color": "#171532",
            "context": "Actions, Top Movers"
          },
          "cardValue": {
            "size": "36px",
            "weight": "Bold",
            "color": "#FFFFFF",
            "context": "Portfolio balance ($12,670.90)"
          },
          "cardChange": {
            "size": "16px",
            "weight": "Medium",
            "color": "#FFFFFF",
            "opacity": 0.9,
            "context": "â†‘ 2.70% Today"
          },
          "actionLabel": {
            "size": "18px",
            "weight": "SemiBold",
            "color": "#FFFFFF",
            "context": "Receive, Send, Swap"
          },
          "metricValue": {
            "size": "18px",
            "weight": "SemiBold",
            "color": "#171532",
            "context": "+34.98%, +66.25%"
          },
          "metricLabel": {
            "size": "14px",
            "weight": "Regular",
            "color": "#747384",
            "context": "BTC $21.58"
          },
          "navLabel": {
            "size": "12px",
            "weight": "Medium",
            "color": "#A8A3C1",
            "context": "Home, Wallets, Market, Settings"
          },
          "activeNavLabel": {
            "size": "12px",
            "weight": "SemiBold",
            "color": "#D975BB",
            "context": "Active tab (Home)"
          }
        }
      },
      "colors": {
        "palette": {
          "primary": {
            "main": "#D975BB",
            "dark": "#261863",
            "darker": "#171532"
          },
          "secondary": {
            "gray": "#747384",
            "lightGray": "#A8A3C1",
            "purple": "#7056B2"
          },
          "gradients": {
            "cardHeader": {
              "type": "linear",
              "angle": "135deg",
              "stops": [
                { "offset": "0%", "color": "#131B63" },
                { "offset": "50%", "color": "#481162" },
                { "offset": "100%", "color": "#A03582" }
              ],
              "context": "Portfolio balance card background"
            },
            "onboarding": {
              "type": "linear",
              "angle": "180deg",
              "stops": [
                { "offset": "0%", "color": "#B971A3" },
                { "offset": "100%", "color": "#A03582" }
              ],
              "context": "Onboarding screen main background"
            },
            "buttonPrimary": {
              "type": "linear",
              "angle": "90deg",
              "stops": [
                { "offset": "0%", "color": "#8462E1" },
                { "offset": "100%", "color": "#55389B" }
              ],
              "context": "Get Started button background"
            }
          },
          "background": {
            "app": "#FFFFFF",
            "card": "#FFFFFF",
            "navBar": "#171532",
            "onboardingOverlay": "rgba(255,255,255,0.95)"
          }
        }
      },
      "shadows": {
        "card": "0 8px 24px rgba(23, 21, 50, 0.12)",
        "button": "0 4px 12px rgba(215, 117, 187, 0.3)",
        "floatingAction": "0 12px 32px rgba(23, 21, 50, 0.2)",
        "context": "Only applied to elevated containers, never to text or icons"
      },
      "borderRadius": {
        "card": "24px",
        "actionTile": "20px",
        "button": "16px",
        "navBar": "32px",
        "metricCard": "16px",
        "context": "Larger radius = higher hierarchy"
      },
      "components": {
        "portfolioCard": {
          "background": "linear-gradient(135deg, #131B63 0%, #481162 50%, #A03582 100%)",
          "border": "none",
          "borderRadius": "24px",
          "padding": "24px",
          "shadow": "0 8px 24px rgba(23, 21, 50, 0.12)",
          "iconContainer": {
            "background": "rgba(255, 255, 255, 0.2)",
            "borderRadius": "50%",
            "size": "56px",
            "iconFill": "#FFFFFF"
          },
          "addButton": {
            "background": "#D975BB",
            "borderRadius": "50%",
            "size": "40px",
            "iconFill": "#FFFFFF",
            "shadow": "0 4px 12px rgba(215, 117, 187, 0.3)"
          }
        },
        "actionTiles": {
          "receive": {
            "background": "#D975BB",
            "borderRadius": "20px",
            "padding": "20px",
            "iconFill": "#FFFFFF",
            "label": {
              "color": "#FFFFFF",
              "weight": "SemiBold"
            },
            "arrowIcon": "#FFFFFF"
          },
          "send": {
            "background": "#261863",
            "borderRadius": "20px",
            "padding": "20px",
            "iconFill": "#FFFFFF",
            "label": {
              "color": "#FFFFFF",
              "weight": "SemiBold"
            },
            "arrowIcon": "#FFFFFF"
          },
          "swap": {
            "background": "#A8A3C1",
            "borderRadius": "20px",
            "padding": "20px",
            "iconFill": "#FFFFFF",
            "label": {
              "color": "#FFFFFF",
              "weight": "SemiBold"
            },
            "arrowIcon": "#FFFFFF"
          }
        },
        "metricCards": {
          "background": "#FFFFFF",
          "borderRadius": "16px",
          "padding": "16px",
          "shadow": "0 4px 12px rgba(23, 21, 50, 0.06)",
          "trendLine": {
            "positive": "#D975BB",
            "negative": "#747384"
          }
        },
        "navigationBar": {
          "background": "#171532",
          "borderRadius": "32px",
          "height": "80px",
          "padding": "16px 24px",
          "inactiveIcon": "#A8A3C1",
          "activeIcon": "#D975BB",
          "activeIndicator": {
            "background": "#D975BB",
            "height": "4px",
            "borderRadius": "2px"
          }
        },
        "buttons": {
          "primary": {
            "default": {
              "background": "linear-gradient(90deg, #8462E1 0%, #55389B 100%)",
              "text": "#FFFFFF",
              "borderRadius": "16px",
              "padding": "16px 32px",
              "shadow": "0 4px 12px rgba(132, 98, 225, 0.3)"
            },
            "hover": {
              "background": "linear-gradient(90deg, #7056B2 0%, #45307D 100%)",
              "transform": "translateY(-2px)",
              "shadow": "0 8px 20px rgba(132, 98, 225, 0.4)"
            },
            "pressed": {
              "transform": "translateY(0px)",
              "shadow": "0 2px 8px rgba(132, 98, 225, 0.3)"
            }
          },
          "iconButton": {
            "background": "transparent",
            "iconFill": "#A8A3C1",
            "hover": {
              "iconFill": "#D975BB"
            }
          }
        },
        "onboardingScreen": {
          "background": "linear-gradient(180deg, #B971A3 0%, #A03582 100%)",
          "overlayCard": {
            "background": "rgba(255, 255, 255, 0.95)",
            "borderRadius": "24px",
            "backdropFilter": "blur(12px)",
            "shadow": "0 12px 32px rgba(169, 53, 130, 0.2)"
          }
        }
      },
      "states": {
        "hover": {
          "actionTile": "brightness(1.05), scale(1.02)",
          "primaryButton": "darker gradient, elevated shadow, translateY(-2px)",
          "navIcon": "color transition to #D975BB"
        },
        "active": {
          "actionTile": "scale(0.98)",
          "primaryButton": "reduced shadow, translateY(0)"
        },
        "focus": {
          "primaryButton": "2px outline #8462E1 with 4px offset"
        },
        "disabled": {
          "primaryButton": "background #A8A3C1, text #FFFFFF, opacity 0.6"
        }
      },
      "layout": {
        "spacing": {
          "section": "32px",
          "card": "24px",
          "element": "16px",
          "tight": "8px"
        },
        "grid": {
          "actionTiles": "3-column with 12px gutters",
          "metricCards": "2-column with 16px gutters"
        }
      }
    }
  }